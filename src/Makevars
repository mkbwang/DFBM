
# Set the C++ standard
CXX_STD = CXX11
CXXFLAGS += -O2
CXXFLAGS += -Wextra

# If you need to add any additional include paths
PKG_CPPFLAGS = $(SHLIB_OPENMP_CXXFLAGS) -I../inst/include

# If you need to add any additional linker paths or libraries
PKG_LIBS = $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)
