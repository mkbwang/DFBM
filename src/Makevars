
# Set the C++ standard
CXX_STD = CXX11
CXXFLAGS += -O2
CXXFLAGS += -Wextra

# If you need to add any additional include paths
PKG_CXXFLAGS=$(SHLIB_OPENMP_CXXFLAGS) -DEIGEN_USE_BLAS -DEIGEN_USE_LAPACKE

# If you need to add any additional linker paths or libraries
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) $(SHLIB_OPENMP_CXXFLAGS)
